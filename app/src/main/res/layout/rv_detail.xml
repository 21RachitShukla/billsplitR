<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nameDet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark4"
        android:textSize="24sp" />


    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="5"
        app:dsb_indicatorColor="@color/black"
        app:dsb_max="100"
        app:dsb_min="0"
        app:dsb_progressColor="@color/colorPrimary4"
        app:dsb_rippleColor="@color/black"
        app:dsb_trackColor="@color/colorPrimaryDark4" />
</LinearLayout>